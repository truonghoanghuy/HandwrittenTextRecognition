<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.CheckBox?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane"
            fx:controller="main.ViewerController">
    <ScrollPane AnchorPane.topAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                AnchorPane.bottomAnchor="35"
                fitToHeight="true" fitToWidth="true">
        <StackPane>
            <ImageView fx:id="imageView" pickOnBounds="true" cache="true"/>
        </StackPane>
    </ScrollPane>
    <HBox alignment="CENTER" spacing="10" style="-fx-padding: 5"
          AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">
        <TextField fx:id="outputField" editable="false" HBox.hgrow="ALWAYS"/>
        <CheckBox fx:id="previewCheckBox" text="Preview" prefWidth="65"/>
        <Button fx:id="writeBtn" text="Write TXT" disable="true" prefWidth="100"/>
    </HBox>
</AnchorPane>
